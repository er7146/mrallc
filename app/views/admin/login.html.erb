<h2>Login</h2>

<%= form_tag "/admin/login" do %>
  <p>
    Username
    <br>
    <%= text_field_tag :username, @username, class: "form-control", id: "inputEmail3", placeholder: "Username"%>
  </p>
  <p>
    Password
    <br>
    <%= password_field_tag :password, @password, class: "form-control", id: "inputPassword3", placeholder: "Password" %>
  </p>
  <p>
    <%= submit_tag "Login", class: "btn btn-default" %>
  </p>
<% end %>

